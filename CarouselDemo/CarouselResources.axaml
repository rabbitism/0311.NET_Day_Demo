<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Add Resources Here  -->
    <ControlTheme TargetType="Carousel" x:Key="TestCarousel">
        <Setter Property="Carousel.PageTransition">
            <PageSlide Duration="0:0:0.5" Orientation="Horizontal" />
        </Setter>
        <Setter Property="Carousel.Template">
            <ControlTemplate TargetType="Carousel">
                <ScrollViewer
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    HorizontalScrollBarVisibility="Hidden"
                    Name="PART_ScrollViewer"
                    VerticalScrollBarVisibility="Hidden">
                    <ItemsPresenter
                        ItemsPanel="{TemplateBinding ItemsPanel}"
                        Margin="{TemplateBinding Padding}"
                        Name="PART_ItemsPresenter" />
                </ScrollViewer>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>
